<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="windowActionModeOverlay">true</item>
        <item name="android:actionModeStyle">@style/ActionModeStyle</item>
        <item name="android:actionModeBackground">?attr/colorPrimary</item>
    </style>


    <style name="ActionModeStyle" parent="Base.Widget.AppCompat.ActionMode">
        <item name="actionOverflowMenuStyle">@style/MenuStyle</item>
    </style>

    <style name="MenuStyle">
        <item name="android:background">@android:color/white</item>
    </style>

    <style name="Dialog.NoTitle" parent="Base.Theme.AppCompat.Dialog">
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoTitle" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="SubTitle" parent="Base.TextAppearance.AppCompat.Subhead">
        <item name="android:ellipsize">marquee</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_width">match_parent</item>
    </style>


    <style name="AppTheme.Blue" parent="AppTheme.NoTitle">
        <item name="colorPrimary">@color/primary_blue</item>
        <item name="colorPrimaryDark">@color/primaryDark_blue</item>
    </style>

    <style name="AppTheme.Red" parent="AppTheme.NoTitle">
        <item name="colorPrimary">@color/primary_red</item>
        <item name="colorPrimaryDark">@color/primaryDark_red</item>
    </style>

    <style name="AppTheme.Green" parent="AppTheme.NoTitle">
        <item name="colorPrimary">@color/primary_green</item>
        <item name="colorPrimaryDark">@color/primaryDark_green</item>
    </style>

    <style name="AppTheme.Yellow" parent="AppTheme.NoTitle">
        <item name="colorPrimary">@color/primary_yellow</item>
        <item name="colorPrimaryDark">@color/primaryDark_yellow</item>
    </style>

    <style name="AppTheme.Purple" parent="AppTheme.NoTitle">
        <item name="colorPrimary">@color/primary_purple</item>
        <item name="colorPrimaryDark">@color/primaryDark_purple</item>
    </style>
</resources>
